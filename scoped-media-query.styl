//###############################################################
// SCOPE MEDIA QUERY                                           ##
//###############################################################
    
scope-media-query( queries... )

    max = length( queries )
    min = 1

    for query in ( min..max )

        if query % 2 == 1

            threshold  = queries[(query - 1)]
            selector   = queries[query]

            @media threshold
                {selector} 
                    {block}


